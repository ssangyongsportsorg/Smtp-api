generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model SmtpConfig {
  id               Int      @id @default(autoincrement())
  name             String   @unique
  host             String
  port             Int
  username         String
  password         String
  maxMonthlyQuota  Int
  currentUsage     Int      @default(0)
  isActive         Boolean  @default(true)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  apiKey           String?  // 新增，可選，支援 API key 方式

  @@map("smtp_configs")
}

model Admin {
  id       Int    @id @default(autoincrement())
  username String @unique
  password String
}